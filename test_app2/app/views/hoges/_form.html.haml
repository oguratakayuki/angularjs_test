= form_for @hoge do |f|
  - if @hoge.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hoge.errors.count, "error")} prohibited this hoge from being saved:"
      %ul
        - @hoge.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
